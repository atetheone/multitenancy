    "#policies/*": "./app/shared/policies/*.js",
    "#abilities/*": "./app/shared/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
